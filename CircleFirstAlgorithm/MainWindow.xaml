            </Grid.RowDefinitions>
        </Grid>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="46,20">
            <Label Name="lblCenterX" Content="Centro X" Width="60" Height="30"/>
            <TextBox Name="tbxCentroX" Width="40" Height="30" Margin="20,0"
                     VerticalContentAlignment="Center"/>
            <Label Name="lblCenterY" Content="Centro Y" Width="60" Height="30"/>
            <TextBox Name="tbxCentroY" Width="40" Height="30" Margin="20,0"
                     VerticalContentAlignment="Center"/>
            <Label Name="lblRadio" Content="Radio" Width="46" Height="30"/>
            <TextBox Name="tbxRadio" Width="40" Height="30" Margin="20,0"
                     VerticalContentAlignment="Center"/>
            <Button Name="btnStart" Content="Iniciar" Height="30" Width="80" Margin="0"
                FontSize="16" Click="BtnStart_Click"/>
        </StackPanel>
    </Grid>
</Window>
